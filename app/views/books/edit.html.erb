<h1>Editing Book</h1>
<h4>Title</h4>
<%= form_with model:@book, local:true do |f| %>
<%= render 'layouts/error_messages', book: @book  %>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "show", book_path %>
<%= link_to "back", books_path %>